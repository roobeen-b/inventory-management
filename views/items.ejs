<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Items</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <%- include('nav') %>
    <div class="items-container">
      <div class="items-header">
        <h1>Items</h1>
        <a href="/items/add" class="add-item-button">Add Item</a>
      </div>
      <table>
        <thead>
          <tr>
            <th>S.N.</th>
            <th>Item Name</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Category</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% items.forEach((item, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= item.item_name %></td>
            <td><%= item.quantity %></td>
            <td><%= item.price %></td>
            <td><%= item.category_name %></td>
            <td class="actions">
              <a href="/items/edit/<%= item.id %>" class="edit-item-button"
                >Edit</a
              >
              <form action="/items/delete/<%= item.id %>" method="POST">
                <button
                  type="submit"
                  class="delete-item-button"
                  onclick="return confirmDelete()"
                >
                  Delete
                </button>
              </form>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <script>
      function confirmDelete() {
        const userInput = prompt("Are you sure you want to delete this item?");
        return userInput === "delete";
      }
    </script>
  </body>
</html>
